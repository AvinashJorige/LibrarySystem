@model OnlineLibraryKnockOut.Models.AdminModel

@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_LayoutLoginPage.cshtml";
}


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true, "Login failed. Check your login details.");
    <form action="../../index2.html" method="post">
        <div class="form-group has-feedback">
            @*<input type="email" class="form-control" placeholder="Email">*@
            @Html.TextBoxFor(u => u.Email_Id, new { @class = "form-control", @placeholder = "Email Id" })
            @Html.ValidationMessageFor(u => u.Email_Id)
            <span class="glyphicon glyphicon-envelope form-control-feedback"></span>
        </div>
        <div class="form-group has-feedback">
            @*<input type="password" class="form-control" placeholder="Password">*@
            @Html.PasswordFor(u => u.Password, new { @class = "form-control", @placeholder = "Password" })
            @Html.ValidationMessageFor(u => u.Password)
            <span class="glyphicon glyphicon-lock form-control-feedback"></span>
        </div>
        <div class="control-group">
            <div class="controls">
                <label class="control-label">Type :</label>
                <div classs="row">
                    <div class="col-md-6">
                        <div class="radio">
                            <label>
                                @Html.RadioButtonFor(m => m.Type, "Librarian")
                                @Html.Label("Librarian")
                            </label>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="radio">
                            <label>
                                @Html.RadioButtonFor(m => m.Type, "Student")
                                @Html.Label("Student")
                            </label>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-xs-8">
                <div class="checkbox icheck">
                    <label class="">
                        <div class="icheckbox_square-blue" aria-checked="false" aria-disabled="false" style="position: relative;">
                            @Html.CheckBoxFor(m => m.isRemember, new { @checked = false, @style = "position: absolute; top: -20%; left: -20%; display: block; width: 140%; height: 140%; margin: 0px; padding: 0px; background: rgb(255, 255, 255); border: 0px; opacity: 0;" })
                            <ins class="iCheck-helper" style="position: absolute; top: -20%; left: -20%; display: block; width: 140%; height: 140%; margin: 0px; padding: 0px; background: rgb(255, 255, 255); border: 0px; opacity: 0;"></ins>
                        </div> Remember Me
                    </label>
                </div>
            </div>
            <!-- /.col -->
            <div class="col-xs-4">
                <button type="submit" class="btn btn-primary btn-block btn-flat">Sign In</button>
            </div>
            <!-- /.col -->
        </div>
        <div class="social-auth-links text-center">
            <p>- OR -</p>
        </div>

        <a href="#">I forgot my password</a><br />
        <a href="register.html" class="text-center">Register a new membership</a>
    </form>

}