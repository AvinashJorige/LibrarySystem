@model OnlineLibraryKnockOut.Models.AdminModel

@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_LayoutLoginPage.cshtml";
}


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true, "Login failed. Check your login details.");
    <form action="../../index2.html" method="post">
        <div class="form-group has-feedback">
            @*<input type="email" class="form-control" placeholder="Email">*@
            @Html.TextBoxFor(u => u.Email_Id, new { @class = "form-control" })
            @Html.ValidationMessageFor(u => u.Email_Id)
            <span class="glyphicon glyphicon-envelope form-control-feedback"></span>
        </div>
        <div class="form-group has-feedback">
            @*<input type="password" class="form-control" placeholder="Password">*@
            @Html.PasswordFor(u => u.Password, new { @class = "form-control" })
            @Html.ValidationMessageFor(u => u.Password)
            <span class="glyphicon glyphicon-lock form-control-feedback"></span>
        </div>
        <div class="control-group">
            <div class="controls">
                <label class="control-label">Type :</label>
                <div class="radio">
                    <label>
                        @Html.RadioButtonFor(m => m.Type, "Librarian")
                        @Html.Label("Librarian")
                    </label>
                </div>
                <div class="radio">
                    <label>
                        @Html.RadioButtonFor(m => m.Type, "Student")
                        @Html.Label("Student")
                    </label>
                </div>
            </div>
        </div>
        <div class="row">
            <!-- /.col -->
            <div class="col-xs-4">
                <button type="submit" class="btn btn-primary btn-block btn-flat">Sign In</button>
            </div>
            <!-- /.col -->
        </div>
    </form>

}